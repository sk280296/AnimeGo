<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_6B4B4B"
    tools:context=".view.ui.SplashActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="@dimen/dp100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvMain"
        android:layout_height="@dimen/dp100"
        android:src="@drawable/ic_splash"/>

    <TextView
        android:id="@+id/tvMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/color_FFFFFF"
        android:textFontWeight="800"
        android:textSize="@dimen/sp35"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTagLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/a_way_to_experience"
        android:textColor="@color/color_FFFFFF"
        android:textFontWeight="800"
        android:textSize="@dimen/sp10"
        app:layout_constraintEnd_toEndOf="@id/tvMain"
        app:layout_constraintTop_toBottomOf="@id/tvMain" />

</androidx.constraintlayout.widget.ConstraintLayout>