<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:shimmer_auto_start="true"
    android:layout_marginHorizontal="@dimen/dp5"
    app:shimmer_duration="1500">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/shimmerPosterImage"
            android:layout_width="@dimen/dp90"
            android:layout_height="@dimen/dp120"
            android:background="@color/color_E0E0E0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/shimmerCharacterName"
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/dp20"
            android:layout_marginTop="@dimen/dp5"
            android:background="@color/color_E0E0E0"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/sp12"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/shimmerPosterImage"
            app:layout_constraintStart_toStartOf="@id/shimmerPosterImage"
            app:layout_constraintTop_toBottomOf="@+id/shimmerPosterImage" />

        <View
            android:id="@+id/tvRealName"
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/dp20"
            android:layout_marginTop="@dimen/dp5"
            android:background="@color/color_E0E0E0"
            android:gravity="center_horizontal"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/sp14"
            app:layout_constraintEnd_toEndOf="@id/shimmerPosterImage"
            app:layout_constraintStart_toStartOf="@id/shimmerPosterImage"
            app:layout_constraintTop_toBottomOf="@id/shimmerCharacterName" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>