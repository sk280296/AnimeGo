        <include layout="@layout/item_shimmer_cast" />

        <include layout="@layout/item_shimmer_cast" />

        <include layout="@layout/item_shimmer_cast" />
    </LinearLayout>

</com.facebook.shimmer.ShimmerFrameLayout>