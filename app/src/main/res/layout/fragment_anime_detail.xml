<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_6B4B4B">

    <ImageView
        android:id="@+id/ivPosterBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.18"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/rlPosterOrVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivPosterImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp300"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/playerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <!--<com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:show_buffering="when_playing"
        app:use_controller="true"
        tools:ignore="MissingClass" />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/dp16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rlPosterOrVideo">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp16"
                android:layout_marginTop="@dimen/dp8"
                android:ellipsize="end"
                android:gravity="start|center_horizontal"
                android:maxLines="2"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp22"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvEpisodeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp16"
                android:layout_marginTop="@dimen/dp12"
                app:cardBackgroundColor="@color/color_7A5A5A"
                app:cardCornerRadius="@dimen/dp20"
                app:contentPaddingBottom="@dimen/dp3"
                app:contentPaddingLeft="@dimen/dp8"
                app:contentPaddingRight="@dimen/dp8"
                app:contentPaddingTop="@dimen/dp3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle">

                <TextView
                    android:id="@+id/tvEpisodeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp14" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp8"
                android:layout_marginTop="@dimen/dp12"
                app:cardBackgroundColor="@color/color_7A5A5A"
                app:cardCornerRadius="@dimen/dp20"
                app:contentPaddingBottom="@dimen/dp3"
                app:contentPaddingLeft="@dimen/dp8"
                app:contentPaddingRight="@dimen/dp8"
                app:contentPaddingTop="@dimen/dp3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/cvEpisodeCount"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle">

                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp14" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp8"
                android:layout_marginTop="@dimen/dp12"
                app:cardBackgroundColor="@color/color_7A5A5A"
                app:cardCornerRadius="@dimen/dp20"
                app:contentPaddingBottom="@dimen/dp3"
                app:contentPaddingLeft="@dimen/dp8"
                app:contentPaddingRight="@dimen/dp8"
                app:contentPaddingTop="@dimen/dp3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/cvDuration"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvVoteAverage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="5dp"
                        android:textColor="@color/color_FFFFFF"
                        android:textSize="@dimen/sp14" />

                    <ImageView
                        android:id="@+id/ivClear"
                        android:layout_width="@dimen/dp16"
                        android:layout_height="@dimen/dp16"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/tvVoteAverage"
                        android:src="@drawable/ic_rating_star" />
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvGenres"
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp16"
                android:layout_marginTop="@dimen/dp10"
                android:gravity="start|center_vertical"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp15"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cvRating" />

            <RelativeLayout
                android:id="@+id/rlCast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvGenres"
                tools:layout_editor_absoluteX="0dp">

                <TextView
                    android:id="@+id/tvCast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp16"
                    android:gravity="start|center_vertical"
                    android:text="@string/cast"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp15"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvCast"
                    android:layout_marginTop="@dimen/dp8"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/dp10"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_cast" />

                <include
                    android:id="@+id/shimmerFrameLayout"
                    layout="@layout/cast_simmer_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvCast"
                    android:layout_marginHorizontal="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp8"
                    android:visibility="visible" />

            </RelativeLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/dp0"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp15"
                app:cardBackgroundColor="@color/color_6D6262_70"
                app:contentPadding="@dimen/dp10"
                android:layout_marginHorizontal="@dimen/dp16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cvOverview"
                app:strokeColor="@android:color/transparent">

                <TextView
                    android:id="@+id/tvSynopsis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/sp14" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvOverview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp25"
                android:layout_marginTop="@dimen/dp12"
                app:cardBackgroundColor="@color/color_955E5E"
                app:cardCornerRadius="@dimen/dp20"
                app:contentPaddingBottom="@dimen/dp3"
                app:contentPaddingLeft="@dimen/dp8"
                app:contentPaddingRight="@dimen/dp8"
                app:contentPaddingTop="@dimen/dp3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rlCast"
                app:strokeColor="@android:color/transparent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:text="@string/overview"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp14" />

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/color_FF5722"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
